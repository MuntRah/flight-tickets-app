<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Ticket</title>
    <link rel="stylesheet" href="/stylesheet/new.css" />
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Add Ticket</h1>

    <% let date = new Date();  
    let selectedDate =date.toISOString().split('T')[0]; %>

    <form action="/users/<%= user._id %>/tickets" method="POST">
      <label for="country">Country:</label>
      <input type="text" name="country" id="country" required />
      <label for="date">date:</label>
      <input type="date" id="date" name="date"  min="<%= selectedDate %>" />

      <label for="type">Type:</label>
      <select name="type" id="type" required>
        <option value="One-Way">One Way</option>
        <option value="Transit">Transit</option>
        <option value="Round-Trip">Round Trip</option>
      </select>

      <label for="level">Level:</label>
      <select name="level" id="level" required>
        <option value="First">First</option>
        <option value="Economy">Economy</option>
        <option value="Business">Business</option>
      </select>

      <input type="submit" class="submit" value="Add Ticket" />
    </form>
  </body>
</html>
